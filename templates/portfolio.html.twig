{% extends "base.html.twig" %}

{% block title %}Portfolio{% endblock %}

{% block banner %}
    <div class="banner-giant" style="background-image:url({{ portfolio.cover }});">
        <div class="banner-giant-divider-top"></div>
        <div class="banner-giant-divider-bottom"></div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ portfolio.name }}</h1>
            <p><i>{{ portfolio.tagline }}</i></p>
            {% for project in portfolio.projects %}
                <div class="row portfolio-row">
                    <div class="col-md-3"><img src="{{ project.tile }}" class="portfolio-image"></div>
                    <div class="col-md-9">
                        <h2><a href="/portfolio/{{ project.slug }}">{{ project.title }}</a></h2>
                        <p class="text-muted">
                            {% for category in project.categories %}
                                #{{ category }}
                            {% endfor %}
                        </p>
                        <p>
                            {{ project.content|length > 128 ? project.content|slice(0, 128) ~ '...' : project.content }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
