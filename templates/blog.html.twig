{% extends "base.html.twig" %}

{% block title %}Blog{% endblock %}

{% block banner %}
    <div class="banner-giant" style="background-image:url({{ blog.cover }});">
        <div class="banner-giant-divider-top"></div>
        <div class="banner-giant-divider-bottom"></div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h1>{{ blog.name }}</h1>
            <p><i>{{ blog.tagline }}</i></p>
            {% for post in blog.posts %}
                <h2><a href="/blog/{{ post.slug }}">{{ post.title }}</a></h2>
                <p class="text-muted">
                    By {{ post.author }}, {{ post.date|date("m/d/Y") }} | In
                    {% for tag in post.tags %}
                        <span class="label label-primary">{{ tag }}</span>
                    {% endfor %}
                </p>
                <p>
                    {{ post.content|length > 128 ? post.content|slice(0, 128) ~ '...' : post.content }}
                </p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
