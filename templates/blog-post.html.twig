{% extends "base.html.twig" %}

{% block title %}Blog{% endblock %}

{% block banner %}
    <div class="banner-giant" style="background-image:url({{ post.cover }});">
        <div class="banner-giant-divider-top"></div>
        <div class="banner-giant-divider-bottom"></div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ post.title }}</h2>
            <p class="text-muted">
                By {{ post.author }}, {{ post.date|date("m/d/Y") }} | In
                {% for tag in post.tags %}
                    <span class="label label-primary">{{ tag }}</span>
                {% endfor %}
            </p>
            <p>
                {{ post.content }}
            </p>
        </div>
    </div>
{% endblock %}
